<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <PreferenceCategory
        android:key="psk_barcode_scanner"
        android:title="@string/pg_barcode_scanner">

        <ListPreference
            android:defaultValue="-1"
            android:icon="@drawable/ic_photo_camera"
            android:key="camera.id.scan.barcode"
            android:title="@string/camera"
            />

        <SwitchPreference
            android:defaultValue="true"
            android:icon="@drawable/ic_surround_sound"
            android:key="sounds.scan.barcode.found"
            android:summaryOff="@string/no"
            android:summaryOn="@string/yes"
            android:title="@string/pt_scanning_beep_on_barcode_found" />

        <SwitchPreference
            android:defaultValue="false"
            android:icon="@drawable/ic_surround_sound"
            android:key="sounds.scan.isbn.valid"
            android:summaryOff="@string/no"
            android:summaryOn="@string/yes"
            android:title="@string/pt_scanning_beep_on_valid" />

        <SwitchPreference
            android:defaultValue="true"
            android:icon="@drawable/ic_surround_sound"
            android:key="sounds.scan.isbn.invalid"
            android:summaryOff="@string/no"
            android:summaryOn="@string/yes"
            android:title="@string/pt_scanning_beep_on_invalid" />


    </PreferenceCategory>
</PreferenceScreen>
