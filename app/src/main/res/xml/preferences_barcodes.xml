<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        android:title="@string/pt_barcode_scanner">

        <ListPreference
            android:defaultValue="-1"
            android:icon="@drawable/photo_camera_24px"
            android:key="camera.lens.facing"
            android:title="@string/pt_camera_lens_facing"
            app:useSimpleSummaryProvider="true"
            />

        <ListPreference
            android:defaultValue="1"
            android:entries="@array/pe_scan_mode_single"
            android:entryValues="@array/pv_scan_mode_single"
            android:icon="@drawable/barcode_24px"
            android:key="scan.mode.single"
            android:title="@string/pt_scan_mode"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreference
            android:defaultValue="true"
            android:icon="@drawable/surround_sound_24px"
            android:key="sounds.scan.barcode.found"
            android:summaryOff="@string/no"
            android:summaryOn="@string/yes"
            android:title="@string/pt_scanning_beep_on_barcode_found" />

        <SwitchPreference
            android:defaultValue="false"
            android:icon="@drawable/surround_sound_24px"
            android:key="sounds.scan.isbn.valid"
            android:summaryOff="@string/no"
            android:summaryOn="@string/yes"
            android:title="@string/pt_scanning_beep_on_valid" />

        <SwitchPreference
            android:defaultValue="true"
            android:icon="@drawable/surround_sound_24px"
            android:key="sounds.scan.isbn.invalid"
            android:summaryOff="@string/no"
            android:summaryOn="@string/yes"
            android:title="@string/pt_scanning_beep_on_invalid" />


    </PreferenceCategory>
</PreferenceScreen>
