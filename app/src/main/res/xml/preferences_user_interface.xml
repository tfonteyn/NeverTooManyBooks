<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                                      xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <PreferenceCategory
        android:title="@string/pc_ui">

        <ListPreference
            android:defaultValue="0"
            android:entries="@array/pe_ui_theme_mode"
            android:entryValues="@array/pv_ui_theme_mode"
            android:icon="@drawable/settings_brightness_24px"
            android:key="ui.theme"
            android:title="@string/pt_ui_theme"
            app:useSimpleSummaryProvider="true" />

        <!-- SummaryProvider must be set from code. -->
        <ListPreference
            android:defaultValue="0"
            android:entries="@array/pe_ui_theme_colors"
            android:entryValues="@array/pv_ui_theme_colors"
            android:icon="@drawable/palette_24px"
            android:key="ui.theme.color"
            android:title="@string/pt_ui_theme_colors" />

        <!-- Default: by screen size. -->
        <ListPreference
            android:defaultValue="2"
            android:entries="@array/pe_ui_dialog_mode"
            android:entryValues="@array/pv_ui_dialogs_mode"
            android:icon="@drawable/dialogs_24px"
            android:key="ui.dialog.mode"
            android:title="@string/pt_ui_dialogs_mode"
            app:useSimpleSummaryProvider="true" />

        <!-- Default: by menu and screen size. -->
        <ListPreference
            android:defaultValue="2"
            android:entries="@array/pe_ui_context_menu_mode"
            android:entryValues="@array/pv_ui_menus_context"
            android:icon="@drawable/menu_24px"
            android:key="ui.menu.context.mode"
            android:title="@string/pc_context_menus"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

</androidx.preference.PreferenceScreen>