<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="@string/site_lastdodo_nl">

        <!-- By exception defaults to "true" ! -->
        <SwitchPreference
            android:defaultValue="true"
            android:icon="@drawable/barcode_24px"
            android:key="lastdodo.search.byIsbn.prefer.10"
            android:summaryOff="@string/no"
            android:summaryOn="@string/yes"
            android:title="@string/pt_search_prefer_isbn10" />

        <SwitchPreference
            android:defaultValue="false"
            android:icon="@drawable/cloud_download_24px"
            android:key="lastdodo.resolve.authors.bedetheque"
            android:summaryOff="@string/no"
            android:summaryOn="@string/yes"
            android:title="@string/pt_search_resolve_authors_bedetheque" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/lbl_timeouts">
        <SeekBarPreference
            android:defaultValue="20"
            android:icon="@drawable/more_time_24px"
            android:key="lastdodo.timeout.connect"
            android:max="60"
            android:title="@string/lbl_connection_timeout"
            app:min="3"
            app:showSeekBarValue="true"
            />
        <SeekBarPreference
            android:defaultValue="60"
            android:icon="@drawable/more_time_24px"
            android:key="lastdodo.timeout.read"
            android:max="120"
            android:title="@string/lbl_read_timeout"
            app:min="3"
            app:showSeekBarValue="true"
            />
    </PreferenceCategory>
</PreferenceScreen>