<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/site_amazon">

        <EditTextPreference
            android:defaultValue="https://www.amazon.com"
            android:icon="@drawable/ic_baseline_link_24"
            android:key="amazon.host.url"
            android:summary="@string/preference_not_set"
            android:title="@string/lbl_website_address" />

        <SwitchPreference
            android:defaultValue="true"
            android:icon="@drawable/ic_baseline_shop_24"
            android:key="amazon.search.shopping.menu"
            android:summaryOff="@string/no"
            android:summaryOn="@string/yes"
            android:title="@string/pt_search_show_shopping_options" />

        <SwitchPreference
            android:defaultValue="false"
            android:icon="@drawable/ic_barcode"
            android:key="amazon.search.byIsbn.prefer.10"
            android:summaryOff="@string/no"
            android:summaryOn="@string/yes"
            android:title="@string/pt_search_prefer_isbn10" />

    </PreferenceCategory>

</PreferenceScreen>
