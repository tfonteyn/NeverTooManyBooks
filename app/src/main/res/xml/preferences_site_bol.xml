<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="@string/site_bol_com">

        <!-- values set from code -->
        <ListPreference
            android:icon="@drawable/ic_baseline_language_24"
            android:key="bol.country"
            android:title="@string/lbl_country"
            app:useSimpleSummaryProvider="true"
            />

        <SwitchPreference
            android:defaultValue="false"
            android:icon="@drawable/ic_baseline_shop_24"
            android:key="bol.search.shopping.menu"
            android:summaryOff="@string/no"
            android:summaryOn="@string/yes"
            android:title="@string/pt_search_show_shopping_options" />

        <SwitchPreference
            android:defaultValue="false"
            android:icon="@drawable/ic_barcode"
            android:key="bol.search.byIsbn.prefer.10"
            android:summaryOff="@string/no"
            android:summaryOn="@string/yes"
            android:title="@string/pt_search_prefer_isbn10" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/lbl_timeouts">
        <SeekBarPreference
            android:defaultValue="20"
            android:icon="@drawable/ic_baseline_more_time_24"
            android:key="bol.timeout.connect"
            android:max="60"
            android:title="@string/lbl_connection_timeout"
            app:min="3"
            app:showSeekBarValue="true"
            />
        <SeekBarPreference
            android:defaultValue="60"
            android:icon="@drawable/ic_baseline_more_time_24"
            android:key="bol.timeout.read"
            android:max="120"
            android:title="@string/lbl_read_timeout"
            app:min="3"
            app:showSeekBarValue="true"
            />
    </PreferenceCategory>
</PreferenceScreen>