<!-- Generic  7.0" (600 x 1024) - 160dpi - sw600 -->
<resources>
    <dimen name="cover_list_padding">4dp</dimen>
    <dimen name="cover_details_0_padding">15dp</dimen>
    <dimen name="cover_details_1_padding">15dp</dimen>

    <!-- 100/60 multiplier: 3 -->
    <dimen name="cover_details_0_width">180dp</dimen>
    <!-- 100/60 multiplier: 1.5 -->
    <dimen name="cover_details_1_width">90dp</dimen>

    <!-- 100/60 multiplier: 1.5 -->
    <dimen name="cover_edit_0_width">90dp</dimen>
    <dimen name="cover_edit_1_width">90dp</dimen>

    <!-- 100/60 multiplier: 1.5 -->
    <dimen name="cover_browser_gallery_width">90dp</dimen>

    <!-- 100/60 multiplier: 2.5 -->
    <dimen name="cover_browser_preview_width">150dp</dimen>

    <dimen name="cover_browser_gallery_text_size">14sp</dimen>
    <integer name="cover_browser_gallery_span_count">2</integer>

    <array name="cover_max_width">
        <!-- hidden -->
        <item>0dp</item>
        <!-- small: 3 * 24dp -->
        <item>72dp</item>
        <!-- medium: 4 * 24dp - the default. -->
        <item>96dp</item>
        <!-- large: 6 * 24dp -->
        <item>144dp</item>
        <!-- X-Large: 7 * 24dp -->
        <item>168dp</item>
    </array>
</resources>
