<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:viewBindingIgnore="true"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        >

        <!--
            TODO: decide if we want to use the dialog instead (as Author does)
                    The only extra field is the "is complete"...
            app:menu="@menu/toolbar_action_add2"
        -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            style="@style/Toolbar.Dialog.Fullscreen"
            app:menu="@menu/edit_book_series_list"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:title="@string/lbl_series_multiple"
            />

    </com.google.android.material.appbar.AppBarLayout>

    <include
        layout="@layout/dialog_edit_book_series_list_content" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>