<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/TopCentered"
    tools:context=".FragmentHostActivity"
    >

    <TextView
        android:id="@+id/header"
        style="@style/Text.Header.PreferenceCategory"
        android:text="@string/pt_bob_show_details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/header_vis"
        style="@style/Text.Header"
        android:text="@string/enabled"
        android:layout_marginStart="@dimen/field_margin_start"
        android:textColor="?attr/colorSecondary"
        app:layout_constraintStart_toStartOf="@id/column_list"
        app:layout_constraintTop_toBottomOf="@id/header"
        />

    <TextView
        android:id="@+id/header_sort"
        style="@style/Text.Header"
        android:text="@string/lbl_sorting"
        android:layout_marginEnd="@dimen/field_margin_end"
        android:textColor="?attr/colorSecondary"
        app:layout_constraintEnd_toEndOf="@id/column_list"
        app:layout_constraintTop_toBottomOf="@id/header"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/column_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_vis"
        tools:listitem="@layout/row_edit_style_book_level_column"
        />

</androidx.constraintlayout.widget.ConstraintLayout>


