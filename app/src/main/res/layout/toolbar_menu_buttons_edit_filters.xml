<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:viewBindingIgnore="true"
    >

    <Button
        android:id="@+id/btn_clear"
        style="@style/Toolbar.Button"
        android:contentDescription="@string/action_clear"
        android:text="@string/action_clear"
        />

    <Button
        android:id="@+id/btn_add"
        style="@style/Toolbar.Button"
        android:contentDescription="@string/action_add"
        app:icon="@drawable/add_24px"
        />

    <Button
        android:id="@+id/btn_select"
        style="@style/Toolbar.Button"
        android:layout_marginStart="@dimen/toolbar_button_start_margin_last_button"
        android:contentDescription="@string/action_select"
        app:icon="@drawable/check_24px"
        />
</LinearLayout>