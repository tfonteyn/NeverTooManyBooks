<!-- The layout and button sizes in dimens.xml were tested with:

    Generic 10.1" (800 x 1280) - 160dpi - sw800
    Generic  7.0" (600 x 1024) - 160dpi - sw600

    Pixel2 - 5.0" (1080 x 1920) - 420dpi - sw411dp
    port: w411dp h659dp
    land: w683dp h387dp

    Samsung J530S - 5.2" (720x1280) - 320dpi (density=2.0) - sw360dp
    port: w360dp h568dp
    land:

    Samsung A5-2017 - 5.2" (1080 x 1920) - 480dpi (density=3.0) - sw360dp
    port:  w360dp h616dp
    land:  w640dp h336dp

    4WVGA 4.0" (480 x 800) - 240dpi - sw320dp
    port: w320dp h509dp
    land: w533dp h296dp
-->

<!--
    4WVGA 4.0" (480 x 800) - 240dpi - sw320dp
    port: w320dp h509dp
    land: w533dp h296dp
-->
<resources>
    <!-- use a double redirect;
         e.g.  <dimen name="btn_open_toc_width">@dimen/wrap_content</dimen>
    -->
    <item name="match_parent"
          format="integer"
          type="dimen">-1
    </item>
    <item name="wrap_content"
          format="integer"
          type="dimen">-2
    </item>

    <!-- Navigation panel header padding on all sides. -->
    <dimen name="nav_header_padding">16dp</dimen>

    <!-- layout_marginStart and layout_marginTop of the icon. -->
    <dimen name="app_icon_margin">8dp</dimen>
    <!-- layout_width/layout_height of the icon: About and startup.  -->
    <dimen name="app_icon_size">64dp</dimen>
    <!-- layout_width/layout_height of the icon: Navigation drawer.  -->
    <dimen name="app_icon_size_large">100dp</dimen>


    <!-- elevation for the progress overlay. -->
    <dimen name="progress_z_backdrop">4dp</dimen>
    <!-- elevation for the progress overlay. -->
    <dimen name="progress_z">8dp</dimen>
    <!-- offset from the top for the progress overlay. -->
    <dimen name="progress_margin_top">100dp</dimen>
    <!-- layout_width for the progress dialog. -->
    <dimen name="progress_width">300dp</dimen>
    <!-- generic padding for progress title/message/bar views. -->
    <dimen name="progress_padding">4dp</dimen>


    <!-- ExtMenuPopupWindow: the indentation for a dropdown -->
    <dimen name="popup_menu_x_offset">48dp</dimen>
    <!-- ExtMenuPopupWindow: the elevation was taken from the android materials options menu layout -->
    <dimen name="popup_menu_elevation">8dp</dimen>

    <!-- Custom menus, e.g. list of radio buttons in a dialog: drawable padding. -->
    <dimen name="popup_menu_drawable_padding">20dp</dimen>


    <!-- compliments "?attr/dialogPreferredPadding" which is used for start/end.
         the 18/12 is taken from "abc_dialog_padding_top_material" -->
    <dimen name="dialogPreferredPaddingTop">18dp</dimen>
    <dimen name="dialogPreferredPaddingBottom">12dp</dimen>
    <dimen name="app_m3_alert_dialog_action_bottom_padding">14dp</dimen>
    <dimen name="app_m3_alert_dialog_action_top_padding">14dp</dimen>

    <!-- Make a header text align with list elements which are preceded by an icon.
         Intention is to mimic a PreferenceCategory title indent. -->
    <dimen name="preference_header_margin_start">52dp</dimen>

    <!-- layout_margin for top level layouts. -->
    <dimen name="container_margin">4dp</dimen>
    <!-- layout_marginBottom for top level layouts when used above a BottomAppBar.
         The "Widget.Material3.BottomAppBar" minHeight is fixed at 80dp.
         Hence this value should be 80dp + 'container_margin' to have a consistent look.
         See "activity_cropimage.xml" on how to set. -->
    <dimen name="container_above_bottom_appbar_margin_bottom">84dp</dimen>

    <!-- inline barcode scanner preview -->
    <dimen name="camera_preview_width">300dp</dimen>
    <dimen name="camera_preview_height">140dp</dimen>
    <dimen name="camera_preview_button_margin">4dp</dimen>

    <!-- The margin on top of a generic section/group of data on a screen. -->
    <dimen name="section_margin_top">4dp</dimen>
    <!-- Top margin applied to a field (or its label). -->
    <dimen name="field_margin_top">4dp</dimen>
    <!-- Start margin applied to a field. -->
    <dimen name="field_margin_start">4dp</dimen>
    <!-- End margin applied to a field. Only used where deemed necessary. -->
    <dimen name="field_margin_end">4dp</dimen>
    <!-- Start margin (and occasionally end) applied to the
         2nd, 3rd.. field on a line of fields. -->
    <dimen name="field_margin_inline">6dp</dimen>

    <!-- variation on field_margin_end; see individual usage. -->
    <dimen name="column_margin_end">16dp</dimen>

    <!-- Margin applied around all TIL fields. -->
    <dimen name="til_margin">2dp</dimen>
    <!-- personal_name: author, publisher  -->
    <dimen name="til_fixed_width_personal_name">260dp</dimen>
    <!-- 4 digit year -->
    <dimen name="til_fixed_width_year">120dp</dimen>
    <dimen name="til_fixed_width_price">160dp</dimen>
    <dimen name="til_fixed_width_currency">140dp</dimen>
    <dimen name="til_fixed_width_language">160dp</dimen>
    <dimen name="til_fixed_width_external_id">160dp</dimen>
    <!-- the Series number field -->
    <dimen name="til_fixed_width_series_num">200dp</dimen>
    <!-- the number fields on the "Reading Progress" dialog. -->
    <dimen name="reading_progress_field_width">120dp</dimen>

    <!-- Editing an Author; the check boxes with the author types -->
    <dimen name="cbx_fixed_width_author_type">132dp</dimen>

    <dimen name="btn_open_toc_width">@dimen/wrap_content</dimen>
    <dimen name="btn_open_toc_height">40dp</dimen>

    <!--  ?attr/textAppearanceLabelLarge ->  textSide: 14sp -> this is the normal size
          ?attr/textAppearanceLabelMedium -> textSide: 12sp   -->
    <dimen name="btn_open_toc_text_size">12sp</dimen>

    <!-- see sw360dp/dimens.xml -->
    <dimen name="scrollbar_padding">2dp</dimen>

    <!-- The width of the BoB on the list/detail embedded screen.-->
    <dimen name="bob_embedded_list_width">400dp</dimen>

    <!-- the margin around the CardView. -->
    <dimen name="bob_book_card_margin">4dp</dimen>
    <!-- The content padding used for the CardView content displaying a Book. -->
    <dimen name="bob_book_card_content_padding">4dp</dimen>

    <!-- the margin around the CardView. -->
    <dimen name="authorwork_card_margin">4dp</dimen>
    <!-- The content padding used for the CardView content displaying an AuthorWork. -->
    <dimen name="authorwork_card_content_padding">4dp</dimen>


    <!-- The relative size for the 'real-author' name of a pseudonym. -->
    <item name="bob_author_pseudonym_size"
          format="float"
          type="dimen">0.6f
    </item>

    <!-- The text size (in sp units, but in float notation) for all text in a book list row. -->
    <array name="bob_text_size_in_sp">
        <item>12.0</item>
        <!-- <dimen name="text_size_small_material">14sp</dimen> -->
        <item>14.0</item>
        <!-- DEFAULT - <dimen name="text_size_medium_material">18sp</dimen> -->
        <item>18.0</item>
        <!-- <dimen name="text_size_large_material">22sp</dimen> -->
        <item>22.0</item>
        <item>32.0</item>
    </array>
    <!-- Padding multiplier for the actual padding settings to go with "bob_text_size_in_sp". -->
    <array name="bob_text_padding_in_percent">
        <item>0.77</item>
        <item>0.88</item>
        <!-- DEFAULT -->
        <item>1</item>
        <item>1.11</item>
        <item>1.22</item>
    </array>


    <!-- top margin for the top-level rows (groups); also known as "fat_finger_spacer" -->
    <dimen name="bob_group_level_1_margin_top">4dp</dimen>
    <!-- multipliers for the levels in the booklist:
         paddingStart = (level-1) * bob_group_level_padding_start. -->
    <dimen name="bob_group_level_padding_start">8dp</dimen>
    <!-- padding between the compound drawable and the text on the group levels. -->
    <dimen name="bob_group_level_bullet_padding">4dp</dimen>
    <!-- size (width == height) to use for the bullet drawable on the group levels. -->
    <array name="bob_group_level_bullet_size">
        <item>0dp</item>
        <item>10dp</item>
        <item>6dp</item>
    </array>

    <!-- The width for the "@style/TopCentered" and similar -->
    <dimen name="centered_max_width">600dp</dimen>

    <!-- Buttons *on* the toolbar get extra spacing for ease of use. -->
    <dimen name="toolbar_button_start_margin">4dp</dimen>

    <!-- the scaleX/scaleY scaling factor for the "3-dot" context menu button on a row. -->
    <item name="context_menu_button_scale"
          format="float"
          type="dimen">0.6
    </item>
    <dimen name="context_menu_padding">16dp</dimen>


    <integer name="span_count_edit_bookshelves">1</integer>
    <integer name="span_count_update_from_internet">1</integer>

    <!-- See the tab adapter used in EditBookFragment -->
    <bool name="combine_book_edit_tabs">false</bool>

    <dimen name="startup_splash_border">16dp</dimen>
    <dimen name="startup_splash_min_width">300dp</dimen>
    <dimen name="startup_splash_max_width">340dp</dimen>
</resources>
