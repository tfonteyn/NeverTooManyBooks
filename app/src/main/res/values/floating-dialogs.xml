<!--
    4WVGA (480 x 800; hdpi) - 240dpi - sw320dp
    port: w320dp h509dp
    land: w533dp h296dp

    Floating dialogs are only used when the screen width is
    WindowSizeClass.MEDIUM or WindowSizeClass.EXPANDED
    i.e. only from "sw600" onwards!
-->
<resources>
    <!-- com/hardbacknutter/nevertoomanybooks/dialogs/FFBaseDialogFragment.java
         The default if a floating dialog does not specify a width.

          Must be large enough to fit a single TIL field with "dimen/til_fixed_width_personal_name"
    -->
    <dimen name="floating_dialogs_width">420dp</dimen>
    <!-- dialog specific settings. -->
    <dimen name="floating_dialog_generic_height">100dp</dimen>
    <dimen name="floating_dialogs_cover_browser_width">100dp</dimen>

    <!--
        Copy of "material:abc_alert_dialog_button_bar_height" which is used as minHeight
        for a button. This is a work around for what seems to be a bug where the buttons
        end up with a 0-height when their height is set to WRAP_CONTENT.
        Instead we set the button height to this value.
    -->
    <dimen name="floating_dialogs_button_height">48dp</dimen>
</resources>
