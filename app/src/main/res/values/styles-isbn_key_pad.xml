<!-- Keys on the isbn search keyboard. -->
<resources
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 0..9 and X -->
    <style name="IsbnKeyPad.NumberButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">@dimen/isbn_keypad_key_width</item>
        <item name="android:layout_height">@dimen/isbn_keypad_key_height</item>
        <item name="android:layout_marginStart">@dimen/isbn_keypad_key_margin</item>
        <item name="android:layout_marginEnd">@dimen/isbn_keypad_key_margin</item>

        <item name="android:backgroundTint">?attr/colorSurfaceVariant</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="android:textSize">@dimen/isbn_keypad_number_text_size</item>
    </style>

    <style name="IsbnKeyPad.SearchButton" parent="Widget.Material3.Button.IconButton.Outlined">
        <item name="android:layout_width">@dimen/isbn_keypad_key_width</item>
        <item name="android:layout_height">@dimen/isbn_keypad_key_height</item>
        <item name="android:layout_marginStart">@dimen/isbn_keypad_key_margin</item>
        <item name="android:layout_marginEnd">@dimen/isbn_keypad_key_margin</item>

        <item name="android:backgroundTint">?attr/colorSurfaceVariant</item>
        <item name="strokeWidth">@dimen/isbn_keypad_search_stroke_width</item>
        <item name="icon">@drawable/search_24px</item>
        <item name="iconSize">@dimen/isbn_keypad_search_icon_size</item>
        <item name="iconGravity">textTop</item>
    </style>

    <style name="IsbnKeyPad.BackspaceButton" parent="Widget.Material3.Button.IconButton.Outlined">
        <item name="android:layout_width">@dimen/isbn_keypad_backspace_key_width</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:backgroundTint">?attr/colorSurfaceVariant</item>
        <item name="icon">@drawable/backspace_24px</item>
        <item name="iconGravity">textStart</item>
        <item name="android:contentDescription">@string/action_delete</item>
    </style>

    <style name="IsbnKeyPad.ClearQueueButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/isbn_keypad_key_margin</item>
        <item name="android:layout_marginEnd">@dimen/isbn_keypad_key_margin</item>

        <item name="android:backgroundTint">?attr/colorSurfaceVariant</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="IsbnKeyPad.StopScanButton"
           parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/camera_preview_button_margin</item>
        <item name="android:layout_marginEnd">@dimen/camera_preview_button_margin</item>

        <item name="android:backgroundTint">?attr/colorSurfaceVariant</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
    </style>
</resources>
